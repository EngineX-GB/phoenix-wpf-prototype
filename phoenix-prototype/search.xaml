<Window x:Class="phoenix_prototype.search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:phoenix_prototype"
        mc:Ignorable="d"
        Background="Black"
        WindowStyle="None"
        ShowInTaskbar="True"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        Title="Search" Height="450" Width="800">

    <Window.Resources>
        <local:AvailabilityToBrushConverter x:Key="AvailabilityToBrushConverter" />
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="2">

                            <Grid>
                                <!-- Actual text -->
                                <ScrollViewer x:Name="PART_ContentHost"/>

                                <!-- Placeholder -->
                                <TextBlock x:Name="Watermark"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="DarkGray"
                                   Margin="4,2,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Window.Resources>


    <DockPanel>

        <!-- Custom Title Bar -->
        <Border DockPanel.Dock="Top"
                Background="Black"
                Height="20"
                MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Search Listings"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontSize="10"/>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Content="⨯"
                        Width="40"
                        Background="Black"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontWeight="Bold"
                        Click="CloseButton_Click"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        />

            </Grid>
        </Border>

        <!-- Custom Toolbar -->
        <Border DockPanel.Dock="Top" Background="#222222" Padding="2">
            <Border.Resources>
                <Style TargetType="Button" x:Key="DarkButton">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="3,3"/>
                    <Setter Property="Margin" Value="0,0,1,0"/>

                    <!-- Fixed size -->
                    <Setter Property="Width" Value="25"/>
                    <Setter Property="Height" Value="25"/>


                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#444"/>
                                    </Trigger>

                                    <!-- Pressed -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555"/>
                                    </Trigger>

                                    <!-- Disabled -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="#333"/>
                                        <Setter Property="Foreground" Value="#777"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>





                    <Style.Triggers>
                        <!-- Hover effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#555555"/>
                        </Trigger>
                    </Style.Triggers>


                </Style>
            </Border.Resources>
            <StackPanel Orientation="Horizontal">
                <Button Content="✉︎" Style="{StaticResource DarkButton}" ToolTip="Send Mail"/>
                <Button Content="∞" Style="{StaticResource DarkButton}" ToolTip="Link Clients"/>
               
            </StackPanel>
        </Border>


        <!-- Second Toolbar Row -->
        <Border DockPanel.Dock="Top" Background="#1A1A1A" Padding="2">
            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                <TextBox Width="120" Name="Username"
                     Style="{StaticResource WatermarkTextBox}"
                     Tag="Username"
                     KeyDown="SearchField_KeyDown"
                     FontSize="10"
                     Margin="0,0,5,0"/>
                <TextBox Width="100"
                         Name="UserID"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="UserID"
                         FontSize="10"
                         Margin="0.5"
                         KeyDown="SearchField_KeyDown"/>
                <TextBox Width="100"
                         Name="Nationality"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="Nationality"
                         FontSize="10"
                         Margin="0.5"
                         KeyDown="SearchField_KeyDown"/>
                <TextBox Width="100"
                         Name="Region"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="Region"
                         FontSize="10"
                         Margin="0.5"
                         KeyDown="SearchField_KeyDown"/>
                <Button Content=" Search " Background="DarkGray" Margin="5,0,5,0" Padding="1" ToolTip="Search" Width="50" Click="RunSearchQuery_Click"/>
                <Button Content=" Reset " Background="DarkGray" ToolTip="Reset" Width="50" Click="ResetButton_Click"/>
                <Button Content=" Buy " Background="LightGreen" ToolTip="Place a Buy Order" Width="50"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom"
            Background="#222"
            Height="22"
            BorderThickness="0">
            <Grid>
                <TextBlock x:Name="StatusText"
                   Text="Ready"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"
                   Foreground="White"
                   FontSize="10"/>
            </Grid>
        </Border>



        <DataGrid x:Name="DataGridSearch" 
          ItemsSource="{Binding searchEntries}"
          AutoGenerateColumns="False"
          Background="Black"
          Foreground="White"
          GridLinesVisibility="None"
          HeadersVisibility="Column"
          BorderBrush="#444"
          BorderThickness="1"
          IsReadOnly="True"
          HorizontalAlignment="Left"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="True"
          FrozenColumnCount="2">



            <DataGrid.Resources>
                <!-- Dark ScrollBar Style -->
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="Black"/>
                    <!-- Track background -->
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="Black">
                                    <Track Name="PART_Track"
                               IsDirectionReversed="True">
                                        <Track.Thumb>
                                            <Thumb Background="Black" BorderBrush="Black" BorderThickness="0.5"/>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>


                <Style x:Key="PaddedCell" TargetType="TextBlock">
                    <Setter Property="Padding" Value="0,0,10,0"/>
                    <!-- right padding -->
                    <Setter Property="Foreground" Value="White"/>
                </Style>





            </DataGrid.Resources>

            <!-- this is needed to double override the colour for selecting a row - default is blue, but set it to grey-->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#333333"/>
                            <!-- Selected cell color -->
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#777777"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <!-- Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Setter Property="Padding" Value="0,0,10,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Row Style -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#333"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Style.Triggers>

                        <!-- MUST COME FIRST -->
                        <DataTrigger Binding="{Binding PreviouslyServicedBB}" Value="True">
                            <Setter Property="Background" Value="#442222"/>
                            <!-- light red -->
                            <Setter Property="BorderBrush" Value="#AA0000"/>
                            <!-- red border -->
                            <Setter Property="BorderThickness" Value="1"/>
                        </DataTrigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#333333"/>
                            <!-- Dark grey -->
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="Auto" />
                <DataGridTextColumn Header="Nationality" Binding="{Binding Nationality}" Width="Auto" />
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="Auto"  />
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="Auto" />
                <DataGridTextColumn Header="Telephone" Binding="{Binding Telephone}" Width="Auto"   />
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="Auto" />
                <DataGridTextColumn Header="r100" Binding="{Binding R100}" Width="Auto" />
                <DataGridTextColumn Header="r150" Binding="{Binding R150}" Width="Auto" />
                <DataGridTextColumn Header="r200" Binding="{Binding R200}" Width="Auto"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="Auto" />
                <DataGridTextColumn Header="Min Charge" Binding="{Binding MinimumCharge}" Width="Auto" />
                <DataGridTextColumn Header="Max Charge" Binding="{Binding MaximumCharge}" Width="Auto" />
                <DataGridTextColumn Header="Days in Service" Binding="{Binding NumberOfDaysInService}" Width="Auto"/>

                <DataGridTextColumn Header="% Availability" Binding="{Binding PercentageAvailable}" Width="Auto">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background"
                    Value="{Binding PercentageAvailable, Converter={StaticResource AvailabilityToBrushConverter}}"/>

                            <!-- Default text colour; you can refine this later -->
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>



                <DataGridTextColumn Header="Regions Travelled" Binding="{Binding TotalRegionsTravelled}" Width="Auto"/>
                <DataGridTextColumn Header="History of BB" Binding="{Binding PreviouslyServicedBB}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
