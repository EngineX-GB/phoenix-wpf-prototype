<Window x:Class="phoenix_prototype.search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:phoenix_prototype"
        mc:Ignorable="d"
        Background="Black"
        WindowStyle="None"
        ShowInTaskbar="True"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        Title="Search" Height="450" Width="800">

    <DockPanel>

        <!-- Custom Title Bar -->
        <Border DockPanel.Dock="Top"
                Background="Black"
                Height="20"
                MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Search Listings"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontSize="10"/>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Content="⨯"
                        Width="40"
                        Background="Black"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontWeight="Bold"
                        Click="CloseButton_Click"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        />

            </Grid>
        </Border>

        <!-- Custom Toolbar -->
        <Border DockPanel.Dock="Top" Background="#222222" Padding="2">
            <Border.Resources>
                <Style TargetType="Button" x:Key="DarkButton">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="3,3"/>
                    <Setter Property="Margin" Value="0,0,1,0"/>

                    <!-- Fixed size -->
                    <Setter Property="Width" Value="25"/>
                    <Setter Property="Height" Value="25"/>


                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#444"/>
                                    </Trigger>

                                    <!-- Pressed -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555"/>
                                    </Trigger>

                                    <!-- Disabled -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="#333"/>
                                        <Setter Property="Foreground" Value="#777"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>





                    <Style.Triggers>
                        <!-- Hover effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#555555"/>
                        </Trigger>
                    </Style.Triggers>


                </Style>
            </Border.Resources>
            <StackPanel Orientation="Horizontal">
                <Button Content="⟳" Style="{StaticResource DarkButton}" ToolTip="Refresh" Click="RefreshButton_Click"/>
                <Button Content="⨯" Style="{StaticResource DarkButton}" ToolTip="Remove"/>
            </StackPanel>
        </Border>


        <DataGrid x:Name="DataGridSearch" 
          ItemsSource="{Binding searchEntries}"
          AutoGenerateColumns="False"
          Background="Black"
          Foreground="White"
          GridLinesVisibility="None"
          HeadersVisibility="Column"
          BorderBrush="#444"
          BorderThickness="1"
          IsReadOnly="True"
          HorizontalAlignment="Left"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="True">



            <DataGrid.Resources>
                <!-- Dark ScrollBar Style -->
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="Black"/>
                    <!-- Track background -->
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="Black">
                                    <Track Name="PART_Track"
                               IsDirectionReversed="True">
                                        <Track.Thumb>
                                            <Thumb Background="Black" BorderBrush="Black" BorderThickness="0.5"/>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>


                <Style x:Key="PaddedCell" TargetType="TextBlock">
                    <Setter Property="Padding" Value="0,0,10,0"/>
                    <!-- right padding -->
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.Resources>

            <!-- this is needed to double override the colour for selecting a row - default is blue, but set it to grey-->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#333333"/>
                            <!-- Selected cell color -->
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#777777"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <!-- Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Setter Property="Padding" Value="0,0,10,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Row Style -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#333"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#333333"/>
                            <!-- Dark grey -->
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="Auto" />
                <DataGridTextColumn Header="Nationality" Binding="{Binding Nationality}" Width="SizeToHeader" />
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="SizeToHeader"  />
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="SizeToHeader" />
                <DataGridTextColumn Header="Telephone" Binding="{Binding Telephone}" Width="SizeToHeader"   />
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="SizeToHeader" />
                <DataGridTextColumn Header="r100" Binding="{Binding r100}" Width="SizeToHeader" />
                <DataGridTextColumn Header="r150" Binding="{Binding r150}" Width="SizeToHeader" />
                <DataGridTextColumn Header="r200" Binding="{Binding r200}" Width="SizeToHeader"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="SizeToHeader" />
                <DataGridTextColumn Header="Min Charge" Binding="{Binding MinimumCharge}" Width="SizeToHeader" />
                <DataGridTextColumn Header="Max Charge" Binding="{Binding MaximumCharge}" Width="SizeToHeader" />
                <DataGridTextColumn Header="Days in Service" Binding="{Binding NumberOfDaysInService}" Width="SizeToHeader"/>
                <DataGridTextColumn Header="% Availability" Binding="{Binding PercentageAvailable}" Width="SizeToHeader" />
                <DataGridTextColumn Header="Regions Travelled" Binding="{Binding TotalRegionsTravelled}" Width="SizeToHeader"/>
                <DataGridTextColumn Header="History of BB" Binding="{Binding PreviouslyServicedBB}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
