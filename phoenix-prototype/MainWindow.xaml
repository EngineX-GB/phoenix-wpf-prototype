<Window x:Class="phoenix_prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:phoenix_prototype"
        xmlns:syswin="clr-namespace:System.Windows;assembly=PresentationFramework"
        mc:Ignorable="d"
        Background="Black"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized"
        Title="Phoenix Client Platform"
        ShowInTaskbar="True"
        Loaded="Window_Loaded"
        MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        MaxWidth="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}">

    <Window.Resources>
        <!-- Dark Menu Bar -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Dark MenuItem -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="BorderBrush" Value="#222"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Grid>
                            <!-- Header -->
                            <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="6,3">
                                <ContentPresenter x:Name="HeaderPresenter" ContentSource="Header" Margin="0,0,0,0" />
                            </Border>

                            <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               AllowsTransparency="True"
                               Focusable="False"
                               IsOpen="{TemplateBinding IsSubmenuOpen}">        
                                <Border Background="Transparent" Padding="4">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black"
                                          BlurRadius="14"
                                          ShadowDepth="2"
                                          Opacity="0.6"/>
                                    </Border.Effect>

                                    <Border Background="#222"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Padding="2"
                                        Width="200">
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </Border>
                            </Popup>

                        </Grid>

                        <ControlTemplate.Triggers>

                            <Trigger Property="Role" Value="SubmenuItem">
                                <Setter TargetName="HeaderPresenter" Property="Margin" Value="22,0,0,0"/>
                            </Trigger>


                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333"/>
                            </Trigger>

                            <!-- Dropdown open -->
                            <Trigger Property="IsSubmenuOpen" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="Separator">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="White"
                        Height="1"
                        HorizontalAlignment="Stretch"
                        Margin="12,4,4,4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>




    </Window.Resources>



    <DockPanel>
        <!-- Custom Title Bar -->
        <Border DockPanel.Dock="Top"
                Background="Black"
                Height="25"
                MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Phoenix Client Platform"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Microsoft Sans Serif" 
                           FontWeight="Bold"/>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Content="⨯"
                        Width="40"
                        Background="Red"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontWeight="Bold"
                        Click="CloseButton_Click"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        />

            </Grid>
        </Border>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top"
          Background="#222"
          Foreground="White"
          Height="25">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Exit"/>

            </MenuItem>

            <MenuItem Header="View">
                <MenuItem Header="Refresh"/>
                <Separator />
                <MenuItem Header="Watchlist" Click="Watchlist_Click"/>
                <MenuItem Header="Orders" Click="Orders_Click"/>
                <MenuItem Header="Listings" />
            </MenuItem>

            <MenuItem Header="Help"/>
        </Menu>

        <!-- Main Content -->
        <Grid Background="#111">
            <!-- Your UI goes here -->
        </Grid>
    </DockPanel>
</Window>
